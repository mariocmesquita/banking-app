{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "checking-account-service-route": {
        "ClusterId": "checking-account-service-cluster",
        "Match": {
          "Path": "/api/checking-accounts/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeader": "X-Forwarded-By",
            "Set": "BankingApp.Gateway"
          }
        ]
      },
      "transfer-service-route": {
        "ClusterId": "transfer-service-cluster",
        "Match": {
          "Path": "/api/transfers/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeader": "X-Forwarded-By",
            "Set": "BankingApp.Gateway"
          }
        ]
      }
    },
    "Clusters": {
      "checking-account-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "transfer-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
